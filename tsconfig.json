{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "./build",
    "downlevelIteration": true,
    "declaration": true,
    "resolveJsonModule": true,
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
  ]
}